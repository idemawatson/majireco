generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id    String @id @unique @default(uuid())
  name  String
  email String
  attendingGames  PlayerOnGame[]
}

model Game {
  id                String           @id @unique @default(uuid())
  playedAt          DateTime         @default(now())
  rule              GameRule
  rate              GameRate
  belongingPlayers  PlayerOnGame[]
}

model PlayerOnGame {
  id            String       @id @unique @default(uuid())
  player        Player       @relation(fields: [playerId], references: [id])
  playerId      String
  game          Game         @relation(fields: [gameId], references: [id])
  gameId        String
  roundRecords  RoundRecord[]
}

model RoundRecord {
  id              String        @id @unique @default(uuid())
  createdAt       DateTime      @default(now())
  playerOnGame    PlayerOnGame  @relation(fields: [playerOnGameId], references: [id])
  playerOnGameId  String
  rank            Int
  score           Int
}

enum GameRule {
  RULE_1020
  RULE_1030
}

enum GameRate {
  NO_RATE
  PER_10
  PER_30
  PER_50
}